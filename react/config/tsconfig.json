{
  "compilerOptions": {
    "outDir": "dist-react",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "rootDir" : "../",
    "baseUrl" : "./",
    "paths": {
        "*" : ["node_modules/@types/*", "*"]
    }
  },
  "exclude": [
    "node_modules",
    "node",
    "dist-node",
    "dist-react"
  ],
  "types": [
    "types"
  ]
}
